<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.CadastrarUsuario"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:text="Nome:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="Telefone:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Telefone"
                android:inputType="text"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="CPF:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="CPF"
                android:inputType="text"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="Endereço:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Endereço"
                android:inputType="text"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="Email:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="Senha:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textSize="22sp" />



            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="0"
                android:padding="2dp"
                android:text="Foto do Adotante:"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imagem_do_usuario"
                android:layout_width="280dp"
                android:layout_height="210dp"
                android:layout_margin="18dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimaryDark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_adiconar_imagem_camera"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0"
                    android:background="@color/colorAccent"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_camera_alt_branca_24dp" />

                <ImageButton
                    android:id="@+id/btn_adiconar_imagem"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:background="@color/colorAccent"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_insert_photo_branca_24dp" />

                <ImageButton
                    android:id="@+id/img_btn_remover"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0"
                    android:background="@color/colorAccent"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_clear_branca_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrarUsuario"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="0"
                android:background="@color/colorAccent"
                android:text="Cadastrar"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>