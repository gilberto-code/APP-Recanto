<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CadastroAnimalFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Espécie:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spEspecie"
                android:layout_width="320dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Nome:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_nome_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Idade:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="4dp">

                <SeekBar
                    android:id="@+id/skIdade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:max="50"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/txIdadeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Porte:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spPorte"
                android:layout_width="320dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Raça:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_raca_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Raça"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Cor:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_cor_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="Cor"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rg_sexo_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Sexo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_macho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Macho" />

                <RadioButton
                    android:id="@+id/rb_femea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fêmea" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_prenha_animal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Prenha"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_prenha_sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/rb_prenha_nao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_vacinado_animal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Vacinado"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_sim_vacinado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/rb_nao_vacinado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_castrado_animal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Castrado"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_sim_castrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/rb_nao_castrado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_doente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Doente"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rb_sim_doente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/rb_nao_doente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>

            <EditText
                android:id="@+id/ed_qual_doenca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="Quais doenças"
                android:inputType="textPersonName"
                android:visibility="gone" />


            <EditText
                android:id="@+id/ed_qual_acidente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ems="10"
                android:hint="Qual tipo de acidente"
                android:inputType="textPersonName"
                android:visibility="gone" />


            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:padding="2dp"
                android:text="Descrição:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_descricao_animal"
                android:layout_width="356dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="Descrição"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagem_do_Animal"
                        android:layout_width="280dp"
                        android:layout_height="180dp"
                        android:layout_weight="0"
                        android:scaleType="centerCrop"
                        android:src="@color/colorPrimaryDark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_adiconar_imagem_camera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="0"
                        android:background="@color/colorAccent"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_camera_alt_branca_24dp" />

                    <ImageButton
                        android:id="@+id/btn_adiconar_imagem"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:layout_weight="0"
                        android:background="@color/colorAccent"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_insert_photo_branca_24dp" />

                    <ImageButton
                        android:id="@+id/img_btn_remover"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0"
                        android:background="@color/colorAccent"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_clear_branca_24dp"
                        android:layout_margin="2dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_cadastrar_animal"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Cadastrar" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>